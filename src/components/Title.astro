---
type Props = {
  heading: string
  classes?: string
  size?: 'sm' | 'md'
  textTransform?: 'lowercase' | 'initial'
}

const {
  heading,
  classes,
  size = 'md',
  textTransform = 'lowercase',
  ...rest
} = Astro.props

const Component = heading
---

<Component
  {...rest}
  class:list={[
    'title',
    {
      'title--small': size === 'sm',
      'title--medium': size === 'md',
      'to-lowercase': textTransform === 'lowercase',
    },
    classes,
  ]}
>
  <slot />
</Component>

<style>
  .title {
    font-family: var(--font-family-secondary);
    line-height: var(--line-height-md);
    text-transform: lowercase;
  }

  .title--small {
    font-size: var(--font-size-20);
    margin-bottom: 2.2em;
  }

  .title--medium {
    font-size: var(--font-size-32);
    margin-bottom: 1.375em;
  }
</style>
