---
import ArticleLayout from '@/layouts/ArticleLayout.astro'
import Layout from '@/layouts/Layout.astro'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

type Props = {
  page: CollectionEntry<'articles'>
}

export async function getStaticPaths() {
  const pages = await getCollection('articles', ({ id }) =>
    id.startsWith('pt-br/')
  )

  const paths = pages.map((page) => {
    const [, ...slug] = page.slug.split('/')

    return {
      params: { slug: slug.join('/') || undefined },
      props: { page },
    }
  })

  return paths
}

const { page } = Astro.props
const { Content } = await page.render()

const [, ...route] = page.data.translatedSlug.split('/')
---

<Layout title={page.data.title}>
  <ArticleLayout data={page.data}>
    <Content />
  </ArticleLayout>
</Layout>

<script define:vars={{ route }}>
  const enSwitcher = document.querySelector('[data-lang="en-switcher"]')
  enSwitcher.setAttribute('href', `/articles/${route.join('/')}`)
</script>
