---
import Header from '@/components/Header.astro'
import Layout from '@/layouts/Layout.astro'
import Title from '@/components/Title.astro'
import { Image } from '@astrojs/image/components'
import projects from '@/js/projects-data'

const projectsOrdered = projects.sort((a, b) => +new Date(b.date) - +new Date(a.date))
---

<Layout title="Matheus Almeida &nbsp;â€“&nbsp; Front-End Developer">
  <Header />

  <main class="content-wrapper" aria-label="Main content">
    <section aria-label="About section">
      <Title as="h2" size="sm">Matheus Almeida</Title>

      <div class="hero-desc" aria-label="Resume">
        <p>I'm a front-end developer based in Manaus, Brazil. I'm interested in clean code, simple/usable design and creative coding.</p>

        <p>I'm currently looking for new opportunities to grow as a developer.</p>

        <p>Previously, I worked at <a href="https://www.linkedin.com/in/mutheusalmeida/#experience" target="_blank">Desenrolado</a>, where I built 18 interactive activities for school children. Before that, I worked at <a href="https://www.linkedin.com/in/mutheusalmeida/#experience" target="_blank">Kolabs</a>, built the company's landing page and led their UI development projects.</p>
      </div>
    </section>

    <section aria-label="Experience section">
      <Title as="h3">Experience</Title>

      <ul role="list" class="experience-list">
        <li class="experience-list__item">
          <div class="experience-list__content">
            <small>may 2022 - april 2023</small>

            <h4>Font-end developer @ <a href="https://desenrolado.com/" target="_blank">Desenrolado</a></h4>
          </div>
        </li>
        <li class="experience-list__item">
          <div class="experience-list__content">
            <small>jan 2022 - nov 2022</small>

            <h4>Font-end developer @ <a href="https://www.kolabs.us/en" target="_blank">Kolabs</a></h4>
          </div>
        </li>
      </ul>
    </section>

    <section aria-label="Projects section">
      <Title as="h3">Projects</Title>

      <ul role="list" class="projects-list">
        {projectsOrdered.map(project => (
          <li class="projects-list__item">
            <a href={project.path} class="projects-list__content" target="_blank">
              <Image
                src={project.image}
                alt={project.alt}
                width={107}
                height={80}
                fit="cover"
                position="left"
                quality={100}
              />

              <h4>{project.title}</h4>
            </a>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<style>
  .content-wrapper {
    display: flex;
    flex-direction: column;
    gap: 6em;
    padding: var(--spacing-96) 1em;
    width: min(90vw, var(--spacing-content));
    margin-inline: auto;
  }

  .hero-desc {
    & p:not(:last-child) {
      margin-bottom: 2em;
    }
  }

  .experience-list {
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 2em;
  }


  .experience-list__item,
  .projects-list__item {
    list-style: none;
  }

  .experience-list__content {
    display: flex;
    flex-direction: column;
    gap: 0.5em;

    & small {
      font-family: var(--font-family-secondary);
      color: var(--gray);
      font-size: var(--font-size-14);
      line-height: var(--line-height-md);
      font-weight: 700;
    }

    & h4 {
      font-weight: 500;
      font-family: var(--font-family-primary);
      font-size: var(--font-size-20);
      line-height: var(--line-height-sm);
    }
  }

  .projects-list {
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 2.75em;

    & a {
     text-decoration: none;
    }
  }

  .projects-list__content {
    display: flex;
    gap: 1.5em;
    align-items: center;
    width: max-content;

    & img {
      border-radius: var(--border-radius-sm);
      border: 1px solid var(--gray);
    }

    & h4 {
      font-size: var(--font-size-20);
      line-height: var(--line-height-md);
      font-family: var(--font-family-primary);
      font-weight: 500;
    }
  }
</style>
