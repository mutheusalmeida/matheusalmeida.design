---
import { getLangFromUrl, normalizeLangTag } from '@/js/utils'
import '@/styles/reset.css'

type Props = {
  title?: string
}

const { title } = Astro.props

const lang = getLangFromUrl(Astro.url)
---

<!DOCTYPE html>
<html lang={normalizeLangTag(lang)}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title set:html={title} />
    <meta
      name="description"
      content="Front-end developer, UI developer, or UI engineer, interested in clean code, simple/usable design and creative coding."
    />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="https://use.typekit.net/tlq2ejl.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,400;0,600;1,400;1,600&family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --base-unit: 0.5rem;
    --line-height-base-unit: 1;
    --dark: #2c2c2c;
    --gray: rgba(112, 112, 112, 0.68);
    --white: #fff;
    --font-family-primary: 'Inter', system-ui, sans-serif;
    --font-family-secondary: acumin-pro, system-ui, sans-serif;
    --font-size-14: clamp(0.75rem, 0.25vw + 0.65rem, 0.875rem);
    --font-size-16: clamp(0.875rem, 0.5vw + 0.775rem, 1rem);
    --font-size-20: clamp(1rem, 0.5vw + 0.8017rem, 1.25rem);
    --font-size-32: clamp(1.25rem, 1.5vw + 0.65rem, 2rem);
    --line-height-sm: calc(var(--line-height-base-unit) * 1.1111);
    --line-height-md: calc(var(--line-height-base-unit) * 1.1428);
    --border-radius-sm: calc(var(--base-unit) * 0.375);
    --spacing-80: max(min(4.9687rem, calc((100vw - 22.5rem) / 8)), 2.75rem);
    --spacing-96: max(min(6rem, calc((100vw - 22.5rem) / 8)), 2.75rem);
    --spacing-192: max(min(12rem, calc((100vw) / 8)), 6rem);
    --spacing-content: 41.5625em;
    --spacing-wide: 52.8em;
  }

  body {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-16);
    color: var(--dark);
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-color: var(--dark);
      color: var(--white);
    }
  }
</style>
